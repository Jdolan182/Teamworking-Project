	@Override
	public void update(Observable arg0, Object arg1) {
		// TODO Auto-generated method stub
		Date today = lnkSystem_status.getDate();
		int d = today.getDayNumber();
		boolean newYear = false;
		
		
		setTitle("Administration Office        Date: " +  d);
		
		
		ArrayList<String> names = lnkPermit_list.newDay(today);
		
		for(int i = 0; i < names.size(); i++){
				
			ArrayList<Vehicle_info> vi = lnkPermit_list.getVehicleInfo(names.get(i));
			lnkVehicle_list.removeAllVehiclesFromPermit(vi);

			lnkPermit_list.removePermit(names.get(i));
		}
		
		
		
		if(d == 1){
			newYear = true;
		}
		
		if(newYear == true){
			
			ArrayList<String> allNames = lnkPermit_list.getList();
			
			for(int i = 0; i < allNames.size(); i++){
				lnkPermit_list.resetWarnings(allNames.get(i));;
			}
			
			newYear = false;
		}
		
		
		
		

	}
